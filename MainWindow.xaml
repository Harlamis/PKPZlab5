<Window x:Class="AutomobileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutomobileManager"
        mc:Ignorable="d"
        Title="Automobile Manager" Height="500" Width="800" MinWidth="750" MinHeight="450">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0" Margin="0,0,10,0">
            <TextBlock Text="Add/Edit Automobile" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock Text="Length (mm):"/>
            <TextBox x:Name="LengthTextBox"/>

            <TextBlock Text="Width (mm):" Margin="0,5,0,0"/>
            <TextBox x:Name="WidthTextBox"/>

            <TextBlock Text="Height (mm):" Margin="0,5,0,0"/>
            <TextBox x:Name="HeightTextBox"/>

            <TextBlock Text="Horsepower:" Margin="0,5,0,0"/>
            <TextBox x:Name="HorsepowerTextBox"/>

            <TextBlock Text="Number of Seats:" Margin="0,5,0,0"/>
            <TextBox x:Name="SeatsTextBox"/>

            <TextBlock Text="0-100 Accel (s):" Margin="0,5,0,0"/>
            <TextBox x:Name="ZeroToHundredTextBox"/>

            <TextBlock Text="Color:" Margin="0,5,0,0"/>
            <ComboBox x:Name="ColorComboBox"/>

            <Button x:Name="AddCarButton" Content="Add Automobile" Margin="0,15,0,0" Click="AddCarButton_Click"/>
        </StackPanel>

        <DockPanel Grid.Column="1">
            <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                <Button x:Name="SaveButton" Content="Save to File" Padding="10,5" Click="SaveButton_Click"/>
                <Button x:Name="LoadButton" Content="Load from File" Margin="10,0,0,0" Padding="10,5" Click="LoadButton_Click"/>
            </StackPanel>

            <TextBlock Text="Automobile List" FontWeight="Bold" FontSize="16" DockPanel.Dock="Top"/>
            <ListBox x:Name="AutomobileListBox" Margin="0,5,0,0" SelectionMode="Extended"/>

            <StackPanel DockPanel.Dock="Bottom" Margin="0,10,0,0">
                <TextBlock Text="Actions on Selected:" FontWeight="Bold"/>

                <Button x:Name="CalculateVolumeButton" Content="Calculate Volume" Margin="0,5,0,0" Click="CalculateVolumeButton_Click"/>

                <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                    <TextBlock Text="Passengers:" VerticalAlignment="Center"/>
                    <TextBox x:Name="PassengersTextBox" Width="50" Margin="5,0,5,0"/>
                    <Button x:Name="CheckFitButton" Content="Check Capacity" Click="CheckFitButton_Click"/>
                </StackPanel>

                <Button x:Name="CompareButton" Content="Compare 2 (Performance)" Margin="0,5,0,0" Click="CompareButton_Click"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>